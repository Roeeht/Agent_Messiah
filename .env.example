# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Keep comments on their own lines (some dotenv parsers treat inline comments differently)
# Options: gpt-4o-mini, gpt-4o, gpt-4-turbo
OPENAI_MODEL=gpt-4o-mini

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_CALLER_ID=your_twilio_phone_number_here

# Application Settings
DEBUG=True
LOG_LEVEL=INFO

# Public base URL (Twilio webhooks must reach this). Use ngrok for local dev.
# Example: https://your-id.ngrok-free.dev
BASE_URL=http://localhost:8000

# Language / Voice
# Hebrew caller experience defaults
CALLER_LANGUAGE=he-IL

# Voice debugging (stores per-call debug events in memory; can include raw transcripts)
DEBUG_CALL_EVENTS=False
DEBUG_CALL_EVENTS_MAX=200

# Logging
# When true, prints per-turn user/agent transcript events to the application terminal.
LOG_CALL_TRANSCRIPT=True
LOG_CALL_TRANSCRIPT_MAX_CHARS=500

# Optional (advanced)
# ENABLE_TRANSLATION=True
# OPENAI_TRANSCRIBE_MODEL=gpt-4o-mini-transcribe
# RECORD_MAX_LENGTH_SECONDS=15
# RECORD_SILENCE_TIMEOUT_SECONDS=2
# HEBREW_ASR_FALLBACK_TO_RECORDING=True
# TWILIO_TTS_VOICE=Google.he-IL-Standard-A
